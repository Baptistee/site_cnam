<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>

    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="/">CNAM</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Accueil</a>
                </li>
                {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="/connexion">Se connecter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/inscription">S'inscrire</a> 
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="/deconnexion">Se deconnecter</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="/">Article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cv">CV étudiants</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/projets">Projets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/calendrier">Calendrier</a>
                </li>
                {% if is_granted('ROLE_BDE') %}
                    <li class="nav-item">
                        <a class="nav-link" href="/">Créer un Article</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Ajouter mon CV</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if not app.user.cv %}
                        <li class="nav-item">
                            <a class="nav-link" href="/cv/ajouter">Ajouter mon CV</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="/cv/ajouter">Modifier mon CV</a>
                        </li>
                    {% endif %}
                {% endif %}
                </ul>
            </div>
        </nav>

        <div class="container">
            {% block body %}
            {% endblock %}
        </div>

        <footer class = "page-footer bg-primary">
            <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="/">CNAM</a>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/formation">Formation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/informations">Informations</a>
                </li>
                </ul>
            </div>
        </footer>

    </body>

</html>
