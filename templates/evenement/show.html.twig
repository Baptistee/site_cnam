{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ evenement.titre }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ evenement.debut ? evenement.debut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ evenement.fin ? evenement.fin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Journee_complete</th>
                <td>{{ evenement.journeeComplete ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Couleur_fond</th>
                <td>{{ evenement.couleurFond }}</td>
            </tr>
            <tr>
                <th>Couleur_bordure</th>
                <td>{{ evenement.couleurBordure }}</td>
            </tr>
            <tr>
                <th>Couleur_texte</th>
                <td>{{ evenement.couleurTexte }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evenement_index') }}">back to list</a>

    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}">edit</a>

    {{ include('evenement/_delete_form.html.twig') }}
{% endblock %}
